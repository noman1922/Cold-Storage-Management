@{
    ViewData["Title"] = "Cold Storage Management";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <!-- Changed from text-dark to text-white -->
            <h1 class="display-4 text-white">Cold Storage Management</h1>
            <p class="lead text-white">Store your products safely with our temperature-controlled facilities.</p>
            
            <div class="mt-4">
                <a href="/Account/Login" class="btn btn-primary btn-lg me-3">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
                <a href="/Account/Register" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <div class="cold-storage-icon">
                <i class="bi bi-snow2" style="font-size: 10rem; color: #0d6efd;"></i>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-thermometer-snow display-4 text-primary"></i>
                    <h4 class="mt-3">Temperature Control</h4>
                    <p>From -25°C to 25°C for all your storage needs</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-shield-check display-4 text-success"></i>
                    <h4 class="mt-3">Secure Storage</h4>
                    <p>24/7 monitoring and insurance coverage</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-credit-card display-4 text-warning"></i>
                    <h4 class="mt-3">Easy Payments</h4>
                    <p>Secure online payments with Stripe</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h4>Our Storage Types</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h5><i class="bi bi-snow text-primary"></i> Frozen Storage</h5>
                            <p>-18°C to -25°C for meat, seafood, frozen foods</p>
                            <strong>10 BDT/kg/day</strong>
                        </div>
                        <div class="col-md-4">
                            <h5><i class="bi bi-droplet text-info"></i> Chilled Storage</h5>
                            <p>0°C to 4°C for dairy, vegetables, fruits</p>
                            <strong>6 BDT/kg/day</strong>
                        </div>
                        <div class="col-md-4">
                            <h5><i class="bi bi-sun text-warning"></i> Ambient Storage</h5>
                            <p>15°C to 25°C for dry goods, packaging</p>
                            <strong>4 BDT/kg/day</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cold-storage-icon {
        animation: float 3s ease-in-out infinite;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
</style>