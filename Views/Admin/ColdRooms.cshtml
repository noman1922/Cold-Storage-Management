@model List<ColdStorageManagement.Models.ColdRoom>

@{
    ViewData["Title"] = "Cold Rooms Management";
}

<style>
    .room-card {
        border-left: 5px solid;
        transition: transform 0.3s;
    }
    
    .room-card:hover {
        transform: translateY(-5px);
    }
    
    .frozen-room {
        border-left-color: #0d6efd;
    }
    
    .chilled-room {
        border-left-color: #198754;
    }
    
    .ambient-room {
        border-left-color: #fd7e14;
    }
    
    .capacity-bar {
        height: 10px;
        border-radius: 5px;
        background: #e9ecef;
        margin-top: 5px;
        overflow: hidden;
    }
    
    .capacity-fill {
        height: 100%;
        border-radius: 5px;
    }
    
    .capacity-high {
        background: linear-gradient(90deg, #198754, #40c057);
    }
    
    .capacity-medium {
        background: linear-gradient(90deg, #fd7e14, #ffa94d);
    }
    
    .capacity-low {
        background: linear-gradient(90deg, #dc3545, #e4606d);
    }
</style>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6"><i class="bi bi-building"></i> Cold Rooms Management</h1>
            <p class="text-muted">Manage storage rooms and their capacities</p>
        </div>
        <a href="/Admin/CreateRoom" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Room
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Rooms</h5>
                    <h2 class="display-6">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-success">Available Rooms</h5>
                    <h2 class="display-6">@Model.Count(r => r.IsAvailable && r.AvailableCapacity > 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-warning">Total Capacity</h5>
                    <h2 class="display-6">@Model.Sum(r => r.Capacity) kg</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-info">Available Capacity</h5>
                    <h2 class="display-6">@Model.Sum(r => r.AvailableCapacity) kg</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Cold Rooms Grid -->
    <div class="row">
        @foreach (var room in Model)
        {
            var utilization = room.Capacity > 0 ? (room.Capacity - room.AvailableCapacity) / room.Capacity * 100 : 0;
            var capacityClass = utilization >= 80 ? "capacity-low" : utilization >= 50 ? "capacity-medium" : "capacity-high";
            var roomClass = room.Type.ToLower() switch
            {
                "frozen" => "frozen-room",
                "chilled" => "chilled-room",
                _ => "ambient-room"
            };
            var temperatureColor = room.Temperature < 0 ? "text-primary" : room.Temperature < 10 ? "text-info" : "text-warning";

            <div class="col-md-4 mb-4">
                <div class="card room-card @roomClass">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="card-title">@room.Name</h5>
                                <span class="badge @(room.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(room.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </div>
                            <span class="badge @temperatureColor">
                                @room.Temperature°C
                            </span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Capacity Utilization</small>
                                <small><strong>@utilization.ToString("0")%</strong></small>
                            </div>
                            <div class="capacity-bar">
                                <div class="capacity-fill @capacityClass" style="width: @(utilization.ToString("0"))%"></div>
                            </div>
                            <div class="d-flex justify-content-between mt-1">
                                <small>Used: @(room.Capacity - room.AvailableCapacity) kg</small>
                                <small>Free: @room.AvailableCapacity kg</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Type</small>
                                <p class="mb-0">@room.Type</p>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Price</small>
                                <p class="mb-0">৳@room.PricePerKgPerDay/kg/day</p>
                            </div>
                        </div>

                        

                        <div class="d-flex gap-2">
                            <a href="/Admin/EditRoom/@room.Id" class="btn btn-sm btn-warning flex-fill">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="/Admin/ToggleRoomStatus/@room.Id" 
                               class="btn btn-sm @(room.IsAvailable ? "btn-danger" : "btn-success") flex-fill">
                                @if (room.IsAvailable)
{
    <text><i class="bi bi-power"></i> Disable</text>
}
else
{
    <text><i class="bi bi-power"></i> Enable</text>
}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="col-12">
                <div class="card text-center py-5">
                    <i class="bi bi-building display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">No Cold Rooms</h3>
                    <p class="text-muted">Create your first cold storage room</p>
                    <a href="/Admin/CreateRoom" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create First Room
                    </a>
                </div>
            </div>
        }
    </div>
</div>