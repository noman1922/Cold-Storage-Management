@model List<ColdStorageManagement.Models.Payment>

@{
    ViewData["Title"] = "Payment History";
    var totalAmount = Model.Sum(p => p.Amount);
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h4><i class="bi bi-cash-coin"></i> Payment History</h4>
            <h5 class="mb-0">Total: ৳@totalAmount</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@payment.Id</td>
                            <td>User #@payment.UserId</td> <!-- Changed from payment.User?.Username -->
                            <td>@payment.Product?.Name</td>
                            <td>৳@payment.Amount</td>
                            <td>@payment.PaymentType</td>
                            <td>
                                @if (payment.Status == "Completed")
                                {
                                    <span class="badge bg-success">@payment.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@payment.Status</span>
                                }
                            </td>
                            <td>@payment.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>