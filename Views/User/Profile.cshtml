@model ColdStorageManagement.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-top: 20px;
    }
    
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px 15px 0 0;
        text-align: center;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 50px;
        color: #667eea;
    }
    
    .profile-body {
        padding: 30px;
    }
    
    .info-item {
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
    
    .info-label {
        font-weight: 600;
        color: #555;
        font-size: 14px;
        margin-bottom: 5px;
    }
    
    .info-value {
        font-size: 16px;
        color: #333;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 600;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Profile Card -->
            <div class="card profile-card">
                <!-- Header -->
                <div class="profile-header">
                    <div class="profile-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3>@Model.DisplayName</h3>
                    <p class="mb-0">Cold Storage User</p>
                </div>

                <!-- Body -->
                <div class="profile-body">
                    <h4 class="mb-4">Profile Information</h4>
                    
                    <!-- Profile Form -->
                    <form method="post" action="/User/UpdateProfile">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Username</div>
                                    <div class="info-value">
                                        <input type="text" class="form-control" value="@Model.Username" readonly>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Phone Number</div>
                                    <div class="info-value">
                                        <input type="text" class="form-control" name="Phone" value="@Model.Phone" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Full Name</div>
                                    <div class="info-value">
                                        <input type="text" class="form-control" name="FullName" value="@Model.FullName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Address</div>
                                    <div class="info-value">
                                        <textarea class="form-control" name="Address" rows="3">@Model.Address</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Role</div>
                                    <div class="info-value">
                                        <input type="text" class="form-control" value="@Model.Role" readonly>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Member Since</div>
                                    <div class="info-value">
                                        <input type="text" class="form-control" value="@Model.CreatedDate.ToString("MMMM dd, yyyy")" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <div class="info-label">Account Status</div>
                                    <div class="info-value">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-edit">
                                <i class="bi bi-check-circle"></i> Update Profile
                            </button>
                            
                            <div>
                                <a href="/User/ChangePassword" class="btn btn-warning">
                                    <i class="bi bi-key"></i> Change Password
                                </a>
                                <a href="/User/Dashboard" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Quick Stats -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="bi bi-box display-4 text-primary"></i>
                            <h5 class="mt-2">Products</h5>
                            <h3>0</h3>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="bi bi-cash-coin display-4 text-success"></i>
                            <h5 class="mt-2">Amount Due</h5>
                            <h3>à§³0</h3>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="bi bi-calendar-check display-4 text-info"></i>
                            <h5 class="mt-2">Storage Days</h5>
                            <h3>0</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">