@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        background-color: white !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .stats-card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s;
        cursor: pointer;
        margin-bottom: 20px;
        height: 100%;
        border: none;
    }
    
    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0,0,0,0.2);
    }
    
    .card-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }
    
    .product-card {
        border-left: 5px solid #0d6efd;
    }
    
    .action-btn {
        min-width: 120px;
        margin: 5px;
    }
</style>

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card stats-card text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body">
                    <h1 class="display-5"><i class="bi bi-person-circle"></i> Welcome, @ViewBag.User.Username!</h1>
                    <p class="lead">Cold Storage Management Dashboard</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Clickable Stats Cards -->
    <div class="row mb-4">
        <!-- Total Products Card - Clickable -->
        <div class="col-md-3">
            <a href="/User/Products" style="text-decoration: none;">
                <div class="card stats-card text-white" style="background: linear-gradient(45deg, #0d6efd, #4dabf7);">
                    <div class="card-body text-center">
                        <i class="bi bi-box card-icon"></i>
                        <h5 class="card-title">Total Products</h5>
                        <h2 class="display-6">@ViewBag.ProductCount</h2>
                        <p class="small mb-0">Click to view all products</p>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Active Storage Card - Clickable -->
        <div class="col-md-3">
            <a href="/User/Products" style="text-decoration: none;">
                <div class="card stats-card text-white" style="background: linear-gradient(45deg, #198754, #40c057);">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle card-icon"></i>
                        <h5 class="card-title">Active Storage</h5>
                        <h2 class="display-6">@ViewBag.ProductCount</h2>
                        <p class="small mb-0">Click to view active storage</p>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Amount Due Card - Clickable -->
        <div class="col-md-3">
            <a href="/User/Payments" style="text-decoration: none;">
                <div class="card stats-card text-white" style="background: linear-gradient(45deg, #fd7e14, #ffa94d);">
                    <div class="card-body text-center">
                        <i class="bi bi-cash-coin card-icon"></i>
                        <h5 class="card-title">Amount Due</h5>
                        <h2 class="display-6">৳@(ViewBag.TotalAmountDue ?? "0")</h2>
                        <p class="small mb-0">Click to view payments</p>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Storage Days Card - Clickable -->
        <div class="col-md-3">
            <a href="/User/Products" style="text-decoration: none;">
                <div class="card stats-card text-white" style="background: linear-gradient(45deg, #6f42c1, #9775fa);">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-day card-icon"></i>
                        <h5 class="card-title">Storage Days</h5>
                        <h2 class="display-6">@(ViewBag.TotalStorageDays ?? "0")</h2>
                        <p class="small mb-0">Click to view storage details</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Quick Actions (Only Add Product, Profile, Logout) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card stats-card">
                <div class="card-header bg-light">
                    <h4><i class="bi bi-lightning-charge"></i> Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-center">
                        <!-- Add Product Button -->
                        <a href="/User/AddProduct" class="btn btn-primary btn-lg action-btn">
                            <i class="bi bi-plus-circle"></i> Add Product
                        </a>
                        
                        <!-- Profile Button -->
                        <a href="/User/Profile" class="btn btn-success btn-lg action-btn">
                            <i class="bi bi-person"></i> My Profile
                        </a>
                        
                        <!-- Logout Button -->
                        <a href="/Account/Logout" class="btn btn-danger btn-lg action-btn">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="row">
        <div class="col-12">
            <div class="card stats-card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-boxes"></i> Your Products</h4>
                    <span class="badge bg-primary">@ViewBag.ProductCount items</span>
                </div>
                <div class="card-body">
                    @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Quantity</th>
                                        <th>Storage Room</th>
                                        <th>Entry Date</th>
                                        <th>Amount Due</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.Products)
                                    {
                                        <tr class="product-card">
                                            <td>
                                                <strong>@product.Name</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@product.Category</span>
                                            </td>
                                            <td>@product.Quantity kg</td>
                                            <td>@(product.ColdRoom?.Name ?? "N/A")</td>
                                            <td>@product.EntryDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <span class="badge bg-warning">৳@product.TotalAmountDue</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <!-- View Product Button -->
                                                    <a href="/User/ProductDetails/@product.Id" 
                                                       class="btn btn-info btn-sm">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    
                                                    <!-- Remove Product Button - Goes to ProcessRemoval -->
                                                    <a href="/User/RemoveProduct/@product.Id" 
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Remove
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h3 class="mt-3 text-muted">No Products Stored</h3>
                            <p class="text-muted">You haven't added any products to cold storage yet.</p>
                            <a href="/User/AddProduct" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-plus-circle"></i> Add Your First Product
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-light text-center text-lg-start mt-5">
    <div class="text-center p-3">
        © @DateTime.Now.Year Cold Storage Management. All rights reserved.
    </div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script>
    // Add click animation to stats cards
    document.querySelectorAll('.stats-card').forEach(card => {
        card.addEventListener('click', function() {
            this.style.transform = 'scale(0.98)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
        });
    });
</script>