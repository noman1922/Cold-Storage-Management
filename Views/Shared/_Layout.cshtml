<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Cold Storage Management</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

		<style>
			html, body {
			height: 100%;
			margin: 0;
			padding: 0;
			}

			body {
			min-height: 100vh;
			display: flex;
			flex-direction: column;

			/* Background image (PNG) */
			background: url("/images/coldstorage.jpg") no-repeat center center fixed;
			background-size: cover;
			}

			main {
			flex: 1;
			}

			.navbar {
			background-color: rgba(0, 51, 102, 0.9);
			}

			.card {
			background-color: rgba(255, 255, 255, 0.9); 
			border: 1px solid #cce0ff;
			margin-bottom: 1rem;
			}

			.card-title {
			color: #003366;
			font-weight: bold;
			}

			footer {
			background-color: rgba(0, 51, 102, 0.9);
			color: #fff;
			text-align: center;
			padding: 10px;
			}
		</style>
	</head>
	<body>
		<!-- Navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark">
			<div class="container">
				<a class="navbar-brand" href="/">Cold Storage Management</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="navMenu" class="collapse navbar-collapse">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Insert</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">View</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Report</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Search</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main class="container mt-4">
			@RenderBody()
		</main>

		<!-- Footer -->
		<footer>
			<p>Developed by team 'BINARY BEASTS'</p>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		@RenderSection("Scripts", required: false)
	</body>
</html>