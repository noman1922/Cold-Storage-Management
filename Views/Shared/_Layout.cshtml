<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Cold Storage Management</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
		<!-- Add Bootstrap Icons -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

		<style>
			html, body {
			height: 100%;
			margin: 0;
			padding: 0;
			}

			body {
			min-height: 100vh;
			display: flex;
			flex-direction: column;

			/* Background image (PNG) */
			background: url("/images/coldstorage.jpg") no-repeat center center fixed;
			background-size: cover;
			}

			main {
			flex: 1;
			}

			.navbar {
			background-color: rgba(0, 51, 102, 0.9);
			}

			.card {
			background-color: rgba(255, 255, 255, 0.9); 
			border: 1px solid #cce0ff;
			margin-bottom: 1rem;
			}

			.card-title {
			color: #003366;
			font-weight: bold;
			}

			footer {
			background-color: rgba(0, 51, 102, 0.9);
			color: #fff;
			text-align: center;
			padding: 10px;
			}
		</style>
	</head>
	<body>
		<!-- Navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark">
			<div class="container">
				<a class="navbar-brand" href="/">
					<i class="bi bi-snow"></i> Cold Storage
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="navMenu" class="collapse navbar-collapse">
					<ul class="navbar-nav ms-auto">
						<!-- Show these when user is NOT logged in -->
						@if (Context.Session.GetInt32("UserId") == null)
						{
							<li class="nav-item">
								<a class="nav-link" href="/">
									<i class="bi bi-house"></i> Home
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/Account/Login">
									<i class="bi bi-box-arrow-in-right"></i> Login
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/Account/Register">
									<i class="bi bi-person-plus"></i> Register
								</a>
							</li>
						}
						else
						{
							<!-- Show these when user IS logged in -->
							<li class="nav-item">
								<a class="nav-link" href="/User/Dashboard">
									<i class="bi bi-speedometer2"></i> Dashboard
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/User/Profile">
									<i class="bi bi-person"></i> Profile
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/Account/Logout">
									<i class="bi bi-box-arrow-right"></i> Logout
								</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main class="container mt-4">
			@RenderBody()
		</main>

		<!-- Footer -->
		<footer>
			<p>Developed by team 'BINARY BEASTS'</p>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		@RenderSection("Scripts", required: false)
	</body>
</html>